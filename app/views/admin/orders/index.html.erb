<h1>Orders: <%= @orders.count %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Client</th>
      <th>Creation date</th>
      <th>Total</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.client_name %></td>
        <td><%= order.created_at %></td>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td>
          <%= link_to 'View', [:admin, order] %> |
          <%= link_to 'Edit', [:edit, :admin, order] %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
