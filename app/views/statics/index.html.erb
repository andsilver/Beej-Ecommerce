<!--price calculator  Area Start -->

<section class="price_calculator_area" id="calculator">
  <div class="container">
    <div class="price_calculator_main">
      <div class="price_calculator_headding">
        <h1>Price Calculator</h1>
        <p>You can get an estimated cost of your order before you place it.</p>
      </div>
      <div class="price_calculator_content">
        <div class="row">
          <div class="col-sm-3">
            <div class="price_calculator_item">
              <p>Item Price</p>
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="price" placeholder="0">
                  <label  class="input-group-addon" for="price">$</label>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="price_calculator_item">
              <p>US Shipping Cost</p>
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="cost" placeholder="0">
                  <label  class="input-group-addon" for="cost">$</label>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="price_calculator_item">
              <p>Weight</p>
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="weight" placeholder="0">
                  <label  class="input-group-addon" for="weight">kg</label>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="price_calculator_item">
              <p>Quantity</p>
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="quantity" placeholder="0">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="price_calculator_btn">
              <button type="button" data-toggle="modal" data-target="#calculator_modal">Calculate</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


