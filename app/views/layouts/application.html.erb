                </li>
                <li>
                  <%= link_to cart_items_path do %>
                    <img src="/images/icons/cart_icon.png" alt="img"/>
                  <% end %>
                </li>
                <li>
                  <%= link_to profile_path do %>
                    <img src="/images/icons/settings.png" width="22px" />
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <img src="/images/icons/shutdown.png" width="22px" alt="img"/>
                  <% end %>
                </li>
              <% else %>
                <li><button class="signin_btn" type="button" onclick="window.location.href='login-signup.html'">Sign in</button></li>
                <li><button class="c_account_btn" type="button" onclick="window.location.href='login-signup.html'">Create account</button></li>
                <li>
                  <%= link_to cart_items_path do %>
                    <img src="/images/icons/cart_icon.png" alt="img"/>
                  <% end %>
